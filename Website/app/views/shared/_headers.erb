<head prefix='og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# stoffiplayer: http://ogp.me/ns/fb/stoffiplayer#'>
	
	<% c = params[:controller].gsub '/', '.' %>
	<title>
		<% if content_for? :title %>
			<%= yield :title %> - Stoffi
		<% elsif t? "pages.#{c}.#{params[:action]}.title" %>
			<%= t "pages.#{c}.#{params[:action]}.title" %> - Stoffi
		<% elsif t? "pages.#{c}.title" %>
			<%= t "pages.#{c}.title" %> - Stoffi
		<% else %>
			<%= t 'title' %>
		<% end %>
	</title>
	
	<meta name='description' content='
	<% if content_for? :description %>
		<%= yield :description %>
	<% elsif t? "pages.#{c}.#{params[:action]}.description" %>
		<%= t "pages.#{c}.#{params[:action]}.description" %>
	<% elsif t? "pages.#{c}.description" %>
		<%= t "pages.#{c}.description" %>
	<% else %>
		<%= t 'description' %>
	<% end %>
	' />
	
	<%= yield :header if content_for? :header %>
	
	<meta name="content-language" content="<%=langtag(I18n.locale)%>" />
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<meta name="keywords" content="music player, audio player, free music player, free audio player, stoffiplayer, stoffi" />
	<meta name="copyright" content="Simplare" />
	
	<meta property="og:site_name" content="Stoffi"/>
	<meta property="og:app_id" content="243125052401100"/>
	
	<link rel="shortcut icon" href="<%= asset_path 'gfx/logos/blue_on_transparent_16.png' %>"/>
	
	<% if request.format == :embedded %>
		<%= stylesheet_link_tag "embedded" %>
		<meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />
		
	<% else %>
		<%= stylesheet_link_tag "application" %>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	<% end %>
	
	<%= csrf_meta_tags %>
		
	<%= render 'shared/javascript' %>
	
</head>