toggleSearchMode = () ->
	v = $('#search').val()
	
	if $('#search').val() == ''
		$('.large-logo').show()
		$('.small-logo').hide()
		$('#loading-search').hide()
	else
		$('.large-logo').hide()
		$('.small-logo').show()
		$('#loading-search').show()
		
search = (id) ->
	url = "/search/fetch?id=#{id}"
	req = $.get url
	req.success (html) ->
		display_results(html)
	req.error (jqXHR, status, error) ->
		display_error(error)
		
display_results = (html) ->
	$('#loading-search').hide()
	$('#alert').hide()
	$('#search-results').html(html)
		
display_error = (error) ->
	$('#loading-search').hide()
	$('#search-results').hide()
	$('#alert_message').html(error)
	$('#alert').show()
	
@resizeImage = (image, size) ->
	if image.height() > image.width()
		image.width(size)
	else
		image.height(size)
		l = (image.width() - size) / 2
		r = size + l
		image.css('clip', "rect(0px,#{r}px,#{size}px,#{l}px)")
		image.css('margin-left', "-#{l}px")
		
$(document).on 'contentReady', () ->
	$('#search').autocomplete({
		source: "/search/suggest.json",
		minLength: 2,
		focus: (event,ui) ->
			$('#search').val(ui.item.query)
			false
		select: (event,ui) ->
			$('#search-form').submit()
			false
	})
	.autocomplete('instance')._renderItem = (ul, item) ->
		l = $('#search').val().length
		str = item.query[0..l-1] + '<b>' + item.query[l..]
		$('<li>'+str+'</b></li>').appendTo(ul)
	if $('#search_query').val() == ''
		$('#search').val('')
	toggleSearchMode()
	
	$("img[data-loading='true']").load () ->
		id = $('#search_id').val()
		q = $('#search_query').val()
		if id and q
			search(id)

$ ->
	$(document).on 'click', '#search-pane [data-category]', (event) ->
		if $('#search_query').val() != ''
			return
		event.preventDefault()
		c = $(@).data('category')
		l = $(@).children('a').attr('href')
		$('#search-pane [data-category]').not("[data-category='#{c}']").removeClass('selected')
		$(@).addClass('selected')
		$('#search-form').attr('action', l)